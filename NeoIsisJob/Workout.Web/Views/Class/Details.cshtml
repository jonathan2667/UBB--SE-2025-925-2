        @*         <div class="card-body"> *@
        @*             <h5 class="card-title">Class Schedule</h5> *@
        @*             <p class="text-muted">Coming soon...</p> *@
        @*         </div> *@
        @*     </div> *@
        @* </div> *@
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript functionality here if needed
    </script>
} 