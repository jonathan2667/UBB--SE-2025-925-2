@model List<Workout.Core.Models.WishlistItemModel>

@{
    ViewData["Title"] = "Wishlist";
}

<div class="container mt-4">
    <h1>Your Wishlist</h1>
    
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Your wishlist is empty.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (item.Product?.PhotoURL != null)
                        {
                            <img src="@item.Product.PhotoURL" class="card-img-top" alt="@item.Product.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light text-center py-5 card-img-top">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Product?.Name</h5>
                            <p class="card-text">@item.Product?.Description</p>
                            <p class="card-text text-primary font-weight-bold">$@item.Product?.Price.ToString("F2")</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <form asp-action="Remove" method="post">
                                <input type="hidden" name="id" value="@item.ID" />
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </form>
                            
                            @if (item.Product != null)
                            {
                                <a href="#" class="btn btn-primary">View Details</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 