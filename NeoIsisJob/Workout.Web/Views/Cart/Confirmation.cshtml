@{
    ViewData["Title"] = "Order Confirmation";
    var orderNumber = new Random().Next(10000, 99999);
    var orderDate = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss");
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-check-circle-fill me-2"></i> Order Confirmed!</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <img src="https://cdn-icons-png.flaticon.com/512/889/889258.png" alt="Order Confirmed" class="img-fluid" style="max-width: 150px;">
                    </div>
                    
                    <h4>Thank you for your purchase!</h4>
                    <p class="lead">Your order has been confirmed and is being processed.</p>
                    
                    <div class="alert alert-info mt-3">
                        <div class="row">
                            <div class="col-md-6 text-md-end">
                                <strong>Order Number:</strong>
                            </div>
                            <div class="col-md-6 text-md-start">
                                #@orderNumber
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 text-md-end">
                                <strong>Order Date:</strong>
                            </div>
                            <div class="col-md-6 text-md-start">
                                @orderDate
                            </div>
                        </div>
                    </div>
                    
                    <p class="mt-4">A confirmation email has been sent to your email address.</p>
                    
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-fill"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 