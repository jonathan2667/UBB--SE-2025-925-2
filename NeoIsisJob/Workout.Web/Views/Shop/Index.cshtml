@using Workout.Web.ViewModels.Shop
@{
    ViewData["Title"] = "Shop";
}
@model ShopViewModel

<h1 class="mb-4">Shop</h1>

<!-- Search bar and Add Product button -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <input type="text" class="form-control w-50" placeholder="Search product..." id="searchBox" />
    <a class="btn btn-primary ms-3" asp-controller="Shop" asp-action="Create">Add Product</a>
</div>

<div class="row">
    <!-- Filter panel -->
    <div class="col-md-3">
        <div class="card bg-light mb-4">
            <div class="card-body">
                <h5 class="card-title">Filters</h5>

                <!-- Category Filter -->
                <div class="mb-3">
                    <label for="categoryFilter" class="form-label fw-bold">Category</label>
                    <select class="form-select" id="categoryFilter">
                        <option value="">-- Select Category --</option>
                        @if (!Model.Categories.Any())
                        {
                            <option value="">@ViewBag.Message</option>
                        }
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.ID">@category.Name</option>
                        }
                    </select>
                </div>

                <!-- Color Filter -->
                <div class="mb-3">
                    <label for="colorFilter" class="form-label fw-bold">Color</label>
                    <select class="form-select" id="colorFilter">
						<option value="">-- Select Color --</option>
                        <option>Red</option>
                        <option>Green</option>
                        <option>Blue</option>
                        <option>Yellow</option>
                        <option>White</option>
                        <option>Black</option>
                    </select>
                </div>

                <!-- Size Filter -->
                <div class="mb-3">
                    <label for="sizeFilter" class="form-label fw-bold">Size</label>
                    <select class="form-select" id="sizeFilter">
						<option value="">-- Select Size --</option>
                        <option>S</option>
                        <option>M</option>
                        <option>L</option>
                        <option>XL</option>
                    </select>
                </div>

                <button class="btn btn-outline-secondary w-100" id="resetFilters">Reset Filters</button>
            </div>
        </div>
    </div>

    <!-- Product list -->
    <div class="col-md-9">
        <div class="row" id="productList">
            @if (!Model.Products.Any())
            {
                <div class="alert alert-warning">
                    @ViewBag.Message
                </div>
            }
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card bg-dark text-white">
                        <img src="@product.PhotoURL" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">Color: @product.Color</p>
                            <p class="card-text">Price: $@product.Price</p>
                            <a asp-controller="Shop" asp-action="Details" asp-route-id="@product.ID" class="btn btn-light w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('resetFilters').addEventListener('click', () => {
            document.getElementById('categoryFilter').selectedIndex = 0;
            document.getElementById('colorFilter').selectedIndex = 0;
            document.getElementById('sizeFilter').selectedIndex = 0;
        });
    </script>
}
